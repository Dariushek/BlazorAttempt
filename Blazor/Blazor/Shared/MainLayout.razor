@inherits LayoutComponentBase
<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton OnClick="@((e) => ButtonClicked())" Icon="menu"></MatIconButton>
                <MatAppBarTitle>App bar</MatAppBarTitle>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>

    <MatAppBarContent>
        <MatDrawerContainer Style="width: 100vw; height: 100vh;">
            <MatDrawer @bind-Opened="@Opened" Mode="@MatDrawerMode.Modal">
                <MatNavMenu>
                    <MatNavItem Title="Item 1">Item 1</MatNavItem>
                    <MatNavItem Disabled="true" Title="Item 2">Item 2</MatNavItem>
                </MatNavMenu>
            </MatDrawer>
            <MatDrawerContent>
                @Body
            </MatDrawerContent>
        </MatDrawerContainer>
    </MatAppBarContent>
</MatAppBarContainer>


@code
{
    bool Opened = false;

    void ButtonClicked()
    {
        Opened = !Opened;
    }

}